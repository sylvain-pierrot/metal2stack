    # The modules that run in the 'init' stage
    cloud_init_modules:
      - bootcmd
      - write_files
      - set_hostname
      - update_hostname
      - update_etc_hosts
      - users_groups
      - ssh

    # The modules that run in the 'config' stage
    cloud_config_modules:
      - ubuntu_autoinstall
      - ssh_import_id
      - keyboard
      - locale
      - set_passwords
      - apt_configure
      - runcmd

    # The modules that run in the 'final' stage
    cloud_final_modules:
      - package_update_upgrade_install
      - scripts_per_once
      - scripts_per_boot
      - scripts_per_instance
      - scripts_user
      - ssh_authkey_fingerprints
      - final_message
      - power_state_change
